{
  "version": "3.0.0",
  "metadata": {
    "id": "extension-cloudflare",
    "name": "Cloudflare DNS & SSL",
    "kind": "extension",
    "layers": [
      "cicd"
    ],
    "type": "cloudflare",
    "description": "Cloudflare DNS management and SSL certificate automation workflows",
    "version": "1.0.0",
    "author": "Genesis Team",
    "affiliateUrl": "https://domains.cloudflare.com",
    "tags": [
      "cloudflare",
      "dns",
      "ssl",
      "github-actions",
      "aws"
    ],
    "providers": ["aws"],
    "compatibleWith": [
      "aws"
    ],
    "requires": [
      "github"
    ],
    "providesFragments": {
      "dns-provider-message": {
        "mode": "conflict",
        "notes": "Provides Cloudflare-specific DNS setup instructions in deployment documentation"
      },
      "dns-auto-manage": {
        "mode": "conflict",
        "notes": "Enables automated DNS record management via Cloudflare API in CI/CD workflows"
      }
    }
  },
  "scaffoldConfigTemplate": [
    {
      "key": "zoneId",
      "label": "Cloudflare Zone ID",
      "type": "text",
      "required": true,
      "description": "Cloudflare DNS zone identifier",
      "category": "configuration"
    },
    {
      "key": "cloudflareApiKey",
      "label": "Cloudflare Api Key",
      "type": "password",
      "required": true,
      "description": "Required to setup DNS records",
      "category": "configuration",
      "gitStoreKey": "CLOUDFLARE_API_KEY"
    }
  ],
  "dependencies": {},
  "generation": {
    "files": {
      "remove": []
    },
    "layers": {
      "cicd": {}
    }
  },
  "runtimeConfigTemplate": [
    {
      "key": "CLOUDFLARE_ZONE_ID",
      "description": "Cloudflare zone ID for domain",
      "example": "abc123def456",
      "required": true,
      "secret": false,
      "targets": [
        "ops"
      ],
      "commonForAllEnv": true
    }
  ],
  "gitignore": []
}