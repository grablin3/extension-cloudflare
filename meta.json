{
  "version": "3.0.0",

  "metadata": {
    "id": "extension-cloudflare",
    "name": "Cloudflare DNS & SSL",
    "kind": "extension",
    "layers": ["ops", "cicd"],
    "type": "cloudflare",
    "description": "Cloudflare DNS management and SSL certificate automation workflows",
    "version": "1.0.0",
    "author": "Genesis Team",
    "tags": ["cloudflare", "dns", "ssl", "github-actions", "aws"],
    "compatibleWith": ["aws"],
    "requires": ["github"]
  },

  "scaffoldConfigTemplate": [
    {
      "key": "zoneId",
      "label": "Cloudflare Zone ID",
      "type": "text",
      "required": true,
      "description": "Cloudflare DNS zone identifier",
      "category": "configuration"
    }
  ],

  "dependencies": {},

  "files": [
    "ops/cloudflare-config.yaml.mustache"
  ],

  "generation": {
    "files": {
      "remove": []
    },
    "layers": {
      "ops": {},
      "cicd": {}
    }
  },

  "runtimeConfigTemplate": [
    {
      "key": "CLOUDFLARE_API_TOKEN",
      "description": "Cloudflare API token for DNS and SSL management",
      "example": "your-cloudflare-token",
      "required": true,
      "secret": true,
      "targets": ["ops"]
    },
    {
      "key": "CLOUDFLARE_ZONE_ID",
      "description": "Cloudflare zone ID for domain",
      "example": "abc123def456",
      "required": true,
      "secret": false,
      "targets": ["ops"]
    }
  ]
}
